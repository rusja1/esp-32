    <section class="quiz" aria-labelledby="q1label">
      <p id="q1label" class="question">
        ‚ÄúOne slice of cheese weighs 12 grams. The whole block has 10 slices. How much does the whole block of cheese weigh?‚Äù
      </p>

      <form class="options" id="quizForm">
        <!-- Change values freely; correct is data-correct="true" -->
        <label class="option">
          <input type="radio" name="ans" value="112" aria-labelledby="opt1">
          <span id="opt1">112 g</span>
        </label>
        <label class="option">
          <input type="radio" name="ans" value="120" data-correct="true" aria-labelledby="opt2">
          <span id="opt2">120 g</span>
        </label>
        <label class="option">
          <input type="radio" name="ans" value="100" aria-labelledby="opt3">
          <span id="opt3">100 g</span>
        </label>
        <label class="option">
          <input type="radio" name="ans" value="12" aria-labelledby="opt4">
          <span id="opt4">12 g</span>
        </label>

        <div class="controls">
          <button type="button" class="btn-check" id="checkBtn">Check answer</button>
          <button type="button" class="btn-add" id="addBtn">Add Cheese to Dish ‚úì</button>
        </div>

        <p id="feedback" class="feedback" role="status" aria-live="polite"></p>
        <span class="sr-only" id="resultText"></span>
      </form>
    </section>
  </main>

  <script>
    // Simple quiz logic
    const form = document.getElementById('quizForm');
    const checkBtn = document.getElementById('checkBtn');
    const addBtn = document.getElementById('addBtn');
    const feedback = document.getElementById('feedback');

    // Optional: persist success so page can mark ingredient as added
    const KEY = 'cheese_added';

    function getSelectedInput() {
      return form.querySelector('input[name="ans"]:checked');
    }

    function handleCheck() {
      const choice = getSelectedInput();
      if (!choice) {
        feedback.textContent = 'Pick an option first üôÇ';
        feedback.className = 'feedback no';
        feedback.style.display = 'block';
        return;
      }
      const isCorrect = choice.hasAttribute('data-correct');
      if (isCorrect) {
        feedback.textContent = 'Correct! The whole block weighs 120 grams.';
        feedback.className = 'feedback ok';
        feedback.style.display = 'block';
        addBtn.style.display = 'inline-block';
        // Lock choices (optional)
        form.querySelectorAll('input[type="radio"]').forEach(r => r.disabled = true);
      } else {
        feedback.textContent = 'Not quite. Try again!';
        feedback.className = 'feedback no';
        feedback.style.display = 'block';
      }
    }

    function handleAdd() {
      // Mark as added and give a little confirmation
      try { localStorage.setItem(KEY, 'true'); } catch(e) {}
      addBtn.textContent = 'Added ‚úì';
      addBtn.disabled = true;
      addBtn.style.opacity = .85;
      // If this page was opened from the scanner, you could also postMessage to parent/window here.
      // window.postMessage({ingredient: 'cheese', added: true}, '*');
    }

    checkBtn.addEventListener('click', handleCheck);
    addBtn.addEventListener('click', handleAdd);

    // If previously added, reflect that state
    try {
      if (localStorage.getItem(KEY) === 'true') {
        addBtn.textContent = 'Already Added ‚úì';
        addBtn.disabled = true;
        addBtn.style.display = 'inline-block';
      }
    } catch(e) {}
  </script>
